<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/header_card">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My knowledge Hub"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:paddingStart="16dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/istok_web_bold"/>
    </RelativeLayout>

    <GridLayout
        android:id="@+id/cards"
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_margin="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="200dp"
            app:cardBackgroundColor="@color/Night_Blue"
            app:cardCornerRadius="8dp"
            android:layout_margin="16dp"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1">
            <ImageButton
                android:layout_width="90dp"
                android:layout_height="125dp"
                android:scaleType="fitCenter"
                android:src="@drawable/c"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="200dp"
            app:cardBackgroundColor="@color/Night_Blue"
            app:cardCornerRadius="8dp"
            android:layout_margin="16dp"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1">
            <ImageButton
                android:layout_width="90dp"
                android:layout_height="125dp"
                android:scaleType="fitCenter"
                android:src="@drawable/java"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="200dp"
            app:cardBackgroundColor="@color/Night_Blue"
            app:cardCornerRadius="8dp"
            android:layout_margin="16dp"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1">
            <ImageButton
                android:layout_width="90dp"
                android:layout_height="125dp"
                android:scaleType="fitCenter"
                android:src="@drawable/kotlin"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="200dp"
            app:cardBackgroundColor="@color/Night_Blue"
            app:cardCornerRadius="8dp"
            android:layout_margin="16dp"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1">
            <ImageButton
                android:layout_width="90dp"
                android:layout_height="125dp"
                android:scaleType="fitCenter"
                android:src="@drawable/androidstudio"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>
    </GridLayout>

    <Button
        android:id="@+id/contactBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cards"
        android:layout_centerInParent="true"
        android:layout_marginVertical="20dp"
        android:background="@drawable/btn_shape"
        android:fontFamily="@font/istok_web"
        android:text="Contact Us"
        android:textColor="@color/white"
        android:padding="20dp"/>
</RelativeLayout>